    "item": [
        {
            "name": "Create Notification",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 201 Created\", () => { pm.response.to.have.status(201); });",
                            "const jsonData = pm.response.json();",
                            "pm.test(\"Notificacion has an ID\", () => { pm.expect(jsonData.id).to.be.a('number'); });",
                            "pm.collectionVariables.set(\"notificacion_id\", jsonData.id);",
                            "console.log(\"Notificacion ID guardada: \"+jsonData.id);",
                            "",
                            "pm.test(\"Mensaje matches\", () => { pm.expect(jsonData.mensaje).to.eql(\"Tu reserva ha sido confirmada.\"); });",
                            "pm.test(\"Leida is false\", () => { pm.expect(jsonData.leida).to.be.false; });",
                            "pm.test(\"Estudiante ID matches\", () => { pm.expect(jsonData.estudiante.id).to.eql(parseInt(pm.collectionVariables.get(\"estudiante_id\"))); });"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "raw",
